---
import Themes from "astro-themes";
import Nav from "../components/Nav.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <script is:inline>
      if (localStorage.getItem("theme") === null) {
        document.documentElement.setAttribute("data-theme", "light");
      } else document.documentElement.setAttribute("data-theme", localStorage.getItem("theme"));s
    </script>
    <script>
      import { themeChange } from "theme-change";
      themeChange();
    </script>
    <Themes />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Personal Portfolio Website for Zach Wagner" />
    <link rel="icon" type="image/svg+xml" href="/ZW.svg" />
    <link
      rel="preload"
      href="/fonts/dm-sans.woff"
      as="font"
      type="font/woff"
      crossorigin="anonymous"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="min-w-screen flex min-h-screen flex-col">
    <Nav />
    <main class="flex flex-grow justify-center overflow-hidden bg-slate-100 dark:bg-neutral-900">
      <slot />
    </main>
    <style is:global>
      @font-face {
        font-family: "DM Sans";
        src: url("/fonts/dm-sans.woff") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </body>
</html>
