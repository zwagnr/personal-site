---
import { Icon } from "astro-icon";
import { clsx } from "clsx";
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems } from "astro-navbar";
---

<script is:inline src="/ThemeSwitcher.js"></script>

<header
  class="dark:bg-slate z-10 min-h-[10vh] items-center bg-slate-100 px-4 pt-4 dark:bg-neutral-900 md:px-10 md:pt-0 lg:flex">
  <Astronav class="flex flex-1 items-center justify-between sm:items-stretch sm:justify-between">
    <div class="flex w-full items-center justify-between">
      <p class="text-lg lg:block">ZW</p>
      <div class="block lg:hidden">
        <MenuIcon class="w-8 h-8 text-gray-800 dark:text-neutral-100" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex">
      <div class="flex flex-col lg:flex-row lg:gap-5">
        <a
          href="/"
          class={clsx(
            Astro.url.pathname === "/"
              ? "border-b-2"
              : "text-gray-800 rounded-md hover:bg-slate-300 dark:text-gray-100 dark:hover:bg-slate-600",
            "border-black px-3 py-2 text-md font-medium dark:border-white"
          )}>
          Home
        </a>
        <a
          href="/about"
          class={clsx(
            Astro.url.pathname === "/about"
              ? "border-b-2"
              : "text-gray-800 rounded-md hover:bg-slate-300 dark:text-gray-100 dark:hover:bg-slate-600",
            "border-black px-3 py-2 text-md font-medium dark:border-white"
          )}>
          About
        </a>
        <a
          href="/projects"
          class={clsx(
            Astro.url.pathname === "/projects"
              ? "border-b-2"
              : "text-gray-800 rounded-md hover:bg-slate-300 dark:text-gray-100 dark:hover:bg-slate-600",
            "border-black px-3 py-2 text-md font-medium dark:border-white"
          )}>
          Projects
        </a>
        <a
          href="/contact"
          class={clsx(
            Astro.url.pathname === "/contact"
              ? "border-b-2"
              : "text-gray-800 rounded-md hover:bg-slate-300 dark:text-gray-100 dark:hover:bg-slate-600",
            "border-black px-3 py-2 text-md font-medium dark:border-white"
          )}>
          Contact
        </a>
      </div>
      <button
        id="theme-btn"
        title="Theme Switcher"
        class="ml-4 rounded outline-none ring-blue-500 focus-visible:ring-4 focus-visible:ring-offset-0"
        onclick="handleThemeSwitch()">
        <Icon name="ph:moon-bold" class="w-6 h-6" />
        <Icon name="ph:sun-bold" class="w-6 h-6" />
      </button>
    </MenuItems>
  </Astronav>
