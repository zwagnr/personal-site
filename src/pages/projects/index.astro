---
import Nav from "../../components/Nav.astro";
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/Card.astro";
---

<Layout title="projects">
  <div class="flex w-full max-w-7xl flex-col justify-start overflow-auto gap-8">
    <h1 class="flex w-full justify-center text-2xl font-bold">Selected Work</h1>
    <div class="flex w-full flex-row flex-wrap justify-center gap-8 p-8">
      <Card
        title="CakePopUI"
        description="Design System/UI Kit. Built on top of Vanilla Extract, Radix Primatives & ReactAria."
        img={"/cakepop.png"}
        info={"/projects/cakepop"}
        live={"https://cakepop-docs.vercel.app/"}
        github={"https://github.com/zwagnr/cakepop"}
      />
      <Card
        title="Deck Hub"
        description="Parallel TCG Deck Builder"
        img={"/dhLogo.png"}
        info={"/projects/deck-hub"}
        live={""}
        github={""}
      />
      <Card
        title="Vital View"
        description="A data analytics dashboard for your most important health metrics. Sign in with Oura Ring."
        img={"/vitalview.png"}
        info={"/projects/vital-view"}
        live={"https://vitalview.app/"}
        github={"https://github.com/zwagnr/vital-view"}
      />
    </div>
  </div>
</Layout>
